@model DataModels.Article

@{
    ViewData["Title"] = "Delete Article?";
}


<h1>@ViewData["Title"]</h1>


<h3>Are you sure you want to delete the following?</h3>



<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        @{
            if (Model.DateModified > Model.DateCreated)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateModified)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateModified)
                </dd>
            }
        }


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>

    </dl>
    <div>
        @Html.ActionLink("Edit", "Edit", Model, new { Id = Model.Id }) |
        @Html.ActionLink("Delete", "Delete", Model, new { Id = Model.Id }) |
        @Html.ActionLink("Return to Listing", "Listing")

    </div>


</div>

<form asp-action="Delete">
    <div class="form-group">
        <input type="submit" value="Yes, Delete Article!" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Listing">Cancel - Return to Listing</a>